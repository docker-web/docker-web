#!/bin/bash

# Fail2ban Global Configuration
# Service de protection centralisé pour docker-web

# Configuration utilisateur
PUID=1000
PGID=1000
TZ=Europe/Paris

# Configuration fail2ban
BANTIME=3600
MAXRETRY=3
FINDTIME=600

# Emails (optionnel)
DESTEMAIL=admin@domain.local
SENDER=fail2ban@domain.local

# Logs paths
NGINX_LOG_PATH=/var/log/nginx
NEXTCLOUD_LOG_PATH=/var/log/nextcloud
GITEA_LOG_PATH=/var/log/gitea
TRANSMISSION_LOG_PATH=/var/log/transmission

# Action par défaut
BANACTION=iptables-multiport
